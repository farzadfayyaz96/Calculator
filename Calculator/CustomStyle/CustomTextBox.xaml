<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">
    <Style x:Key="SimpleTextBox" TargetType="TextBox" BasedOn ="{StaticResource MetroTextBox}">

        <Setter Property="mah:TextBoxHelper.ButtonContent" Value="X"/>
        <Setter Property="mah:TextBoxHelper.ClearTextButton" Value="True"/>
        <Setter Property="FontFamily" Value="{StaticResource IranSansMedium}"/>
        <Setter Property="BorderBrush" Value="LightGray"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="Margin" Value="10,5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="FlowDirection" Value="RightToLeft"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="mah:ControlsHelper.FocusBorderBrush" Value="{StaticResource AccentColorBrush}"/>
                
            </Trigger>
        </Style.Triggers>
    </Style>
    <!-- x:Class="Calculator.DatePicker.PersianDatePicker" -->
</ResourceDictionary>